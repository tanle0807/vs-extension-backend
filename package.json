{
	"name": "bmd-extension-backend",
	"publisher": "bmd-extension",
	"icon": "logo.png",
	"displayName": "backend",
	"description": "backend",
	"repository": {
		"url": ""
	},
	"version": "0.68.0",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bmdextension.init",
				"title": "BMD: Init Project",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.createControllerResource",
				"title": "BMD: New Controller Resource",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.createController",
				"title": "BMD: New Controller",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.createService",
				"title": "BMD: New Service",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.createEntity",
				"title": "BMD: New Entity",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.createEntityRequest",
				"title": "BMD: New Entity Request",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.contentDefine",
				"title": "BMD: Add Module Content Define",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			},
			{
				"command": "bmdextension.configuration",
				"title": "BMD: Add Module Configuration",
				"icon": {
					"light": "media/light/exe.svg",
					"dark": "media/dark/exe.svg"
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "bmdextension.createControllerResource",
					"group": "bmd@1"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "bmdextension.createController",
					"group": "bmd@2"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "bmdextension.createService",
					"group": "bmd@2"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "bmdextension.createEntity",
					"group": "bmd@2"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "bmdextension.createEntityRequest",
					"group": "bmd@2"
				}
			],
			"view/item/context": [
				{
					"when": "view == bmdextension && viewItem == bmdextension.init",
					"group": "inline",
					"command": "bmdextension.init"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.createControllerResource",
					"group": "inline",
					"command": "bmdextension.createControllerResource"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.createController",
					"group": "inline",
					"command": "bmdextension.createController"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.createService",
					"group": "inline",
					"command": "bmdextension.createService"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.createEntity",
					"group": "inline",
					"command": "bmdextension.createEntity"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.createEntityRequest",
					"group": "inline",
					"command": "bmdextension.createEntityRequest"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.contentDefine",
					"group": "inline",
					"command": "bmdextension.contentDefine"
				},
				{
					"when": "view == bmdextension && viewItem == bmdextension.configuration",
					"group": "inline",
					"command": "bmdextension.configuration"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "bmdPackage",
					"title": "BMD Package",
					"icon": "media/dark/logo.svg"
				}
			]
		},
		"views": {
			"bmdPackage": [
				{
					"id": "bmdextension",
					"name": "BMD COMMAND",
					"icon": "media/dark/bmd.svg"
				},
				{
					"id": "deploy",
					"name": "DEPLOY"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./ && npm run copy:assets",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"copy:assets": "rm -rf ./out/assets/* && cp -rv src/assets/. out/assets/.",
		"publish": "vsce publish minor"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.0.1",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"fs-extra": "^8.1.0"
	}
}
